<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BackgroundBaseColor">#eaeaea</Color>
    <Color x:Key="BackgroundLayer1Color">#f5f5f5</Color>
    <Color x:Key="BackgroundLayer2Color">#ffffff</Color>

    <SolidColorBrush x:Key="BackgroundBase" Color="{StaticResource BackgroundBaseColor}" />
    <SolidColorBrush x:Key="BackgroundLayer1" Color="{StaticResource BackgroundLayer1Color}" />
    <SolidColorBrush x:Key="BackgroundLayer2" Color="{StaticResource BackgroundLayer2Color}" />
</ResourceDictionary>