<Page x:Class="CastQRValidator.Views.Pages.RulesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CastQRValidator.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RulesPage">

    <DockPanel Margin="16" LastChildFill="True">
        <StackPanel
            HorizontalAlignment="Left"
            DockPanel.Dock="Top"
            Orientation="Vertical">
            <TextBlock Style="{StaticResource MaterialDesignHeadline3TextBlock}" Text="Rules" />
            <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Text="Performs read, create, update, delete operations over the rules datasource." />
        </StackPanel>
        <DataGrid
            Background="{StaticResource BackgroundLayer2}"
            Margin="0,16,0,0"
            AutoGenerateColumns="True"
            CanUserAddRows="False"
            HeadersVisibility="All"
            ItemsSource="{Binding Rules}" />
    </DockPanel>
</Page>
